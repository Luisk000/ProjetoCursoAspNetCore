@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Todas as funções";
    Layout = "_ManagementLayout";
}
<h1>Todas as funções</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole"
       asp-controller="Admin">Adicionar nova função</a>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">Id : @role.Id</div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a asp-action="EditRole" asp-controller="Admin" asp-route-id="@role.Id" class="btn btn-primary">Editar</a>
                <a href="#" class="btn btn-danger">Apagar</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">Nenhuma função criada ainda</div>
        <div class="card-body">
            <h5 class="card-title">Clique para adicionar uma função</h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="Admin" asp-action="CreateRole">Criar</a>
        </div>
    </div>
}
