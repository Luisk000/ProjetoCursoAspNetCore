@model EditRoleViewModel
@{
    ViewBag.Title = "Editar função";
}
<h1>Editar Função</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Atualizar</button>
            <a asp-action="ListRoles" class="btn btn-primary">Cancelar</a>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3>Funcionários nesta função:</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Nenhum</h5>
            }
        </div>
        <div class="card-footer">
            <a href="#" class="btn btn-primary" style="width:auto">Adicionar funcionários</a>
            <a href="#" class="btn btn-primary" style="width:auto">Remover funcionários</a>
        </div>
    </div>
</form>